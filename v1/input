'use strict';

window.addEventListener('DOMContentLoaded', function () {
    let name = document.querySelector('#personeName'),
        idNum = document.querySelector('#personeId'),
        addName = document.querySelector('#sendPhone');

    class User {
        constructor(userName, id) {
            this.userName = userName;
            this.id = id;
        }
        hello() {
            console.log(`hi ${this.userName} your id is ${this.id}`);
        }
    }

let Dmitry = new User ('Dmitry', 20);

Dmitry.hello();

//  Классы / Конструкторы

    addName.addEventListener('click', function () {
        let nameForm = [this.userName];
        let idForm = [this.id];

        nameForm = name.value;
        idForm = idNum.value;

        let pers = new User(name.value, idNum.value);
        let nameString = JSON.stringify(nameForm);
        let idString = JSON.stringify(idForm);

        localStorage.setItem('Name', nameString);
        localStorage.setItem('Id', idString);
    });
});


//Это победа!
//localstorage - ввод данных из input в встроенную БД браузера




