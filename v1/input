    class Memb {
        constructor(user, num, login) {
            this.user = user;
            this.num = num;
            this.login = login;
        }

        newUser(user, num) {
            this.login = name.value;
            let login = new Memb (user, num);
            return login;
        }
    }
    let access = new Memb ('abc', 1);

    access.newUser();
});





















