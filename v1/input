    class User {
        constructor(userName, id) {
            this.userName = userName;
            this.id = id;
        }
        hello() {
            console.log(`hi ${this.userName} your id is ${this.id}`);
        }
    }

let Dmitry = new User ('Dmitry', 20);

Dmitry.hello();

